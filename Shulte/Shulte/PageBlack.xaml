<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shulte.PageBlack" Title="Таблица">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="SetFont" TargetType="Label">
                <Setter Property="FontSize" Value="Medium"/>
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="CornerRadius" Value="20"/>
            </Style>
            <Style x:Key="BlackButton" TargetType="Button" BasedOn="{StaticResource Key=ButtonStyle}">
                <Setter Property="TextColor" Value="Black"/>
            </Style>
            <Style x:Key="RedButton" TargetType="Button" BasedOn="{StaticResource Key=ButtonStyle}">
                <Setter Property="TextColor" Value="Red"/>
            </Style>
            <Style TargetType="Grid">
                <Setter Property="Margin" Value="5, 5, 5, 5"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>